<script src='https://cdn.rawgit.com/jaredreich/notie.js/a9e4afbeea979c0e6ee50aaf5cb4ee80e65d225d/notie.js'></script>
<% if flash[:success] %>
  <script>
    notie.alert(1, '<%= flash[:success] %>', 3);
  </script>
<% end %>
<% if flash[:danger] %>
  <script>
    notie.alert(3, 'The form contains <%= pluralize(@user.errors.count, "error")%>.', 3);
  </script>
<% end %>
<% if flash[:notice] %>
  <script>
    notie.alert(4, '<%= flash[:notice] %>', 3);
  </script>
<% end %>
